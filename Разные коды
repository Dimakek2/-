п=['******',
   '**  **',
   '**  **',
   '**  **']
р=['******',
   '**  **',
   '******',
   '**   ']
abc=[п,р]
alf=['п','р']

a='пр'

ch=[alf.index(z) for z in a]

for i in range (len(abc[0])):
    for y in ch:
        print(abc[ch[y]][i],end='    ')
    print()
